<!DOCTYPE html>
<html lang="en">
<head>

    <%- include('partials/header') %>
    <title>Fup Register</title>
    <link rel="stylesheet" href="/CSS/style-reg.css">
 
</head>
<body>

    
    <section>
        <div class="form-box">
            <div class="form-value">
                <form action="/register" method="post">
                    <h2>REGISTER</h2>
                    <div class="inputbox">
                        <ion-icon name="mail"></ion-icon>
                        <input type="email" required placeholder="Email" name="userEmail">
                       
                    </div>
                    <div class="inputbox">
                        <ion-icon name="person-circle"></ion-icon>
                        <input type="text" required placeholder="Username" name="userName">
                       
                    </div>
                    <div class="inputbox">
                        <ion-icon name="lock-closed"></ion-icon>
                        <input type="password" required placeholder="Password" name="userPassword">
                       
                    </div>
                    <div class="inputbox">
                        <ion-icon name="lock-closed"></ion-icon>
                        <input type="password" required placeholder="Repeat password">
                       
                    </div>
                    <button type="submit">Register</button>
                    <div class="register">
                        <p>Already have an account? <a href="/login">Login</a></p>
                    </div>
                    
                   
                   


                </form>
            </div>
        </div>
    </section>


    
    <%- include('partials/footer') %>
    <script src="/JAVASCRIPT/register.js"></script>

    
</html>